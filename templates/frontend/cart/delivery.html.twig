{% extends 'base.html.twig' %}

{% block title %}Livraison{% endblock %}


{% block body %}
<div class="container">
    {% if app.user %}
    <div class="row col-md-12">
        <div class="row-flex col-md-6">
            <h2>Adresse de livraison</h2>


            <div class="row col-md-12">
                <h5>Adresse de livraison</h5>

            </div>
            <!-- <div class="row col-md-12">
                <h5>Adresse de facturation</h5>
            </div> -->

            <a href="{{path('validate')}}" class="btn btn-primary">Valider !</a>

        </div>
        <div class="row col-md-6">
            <h2>Modifier l'adresse de livraison</h2>
            {{form(formAddress)}}
        </div>
    </div>

    {% else %}
    <div class="jumbotron mt-4 loginCart">
        <div class="container">
            <h5>Vous devez vous identifier pour valider le panier !</h5>
            <a href="{{ path('security_login') }}" class="btn btn-success mt-4">Se connecter !</a>
        </div>

    </div>
    {% endif %}
    {% endblock %}