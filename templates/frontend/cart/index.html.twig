{% extends 'base.html.twig' %}

{% block title %}Votre panier !{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('css/cartShopping/cartShopping.css') }}" rel="stylesheet" />
{% endblock stylesheets%}

{% set total = 0 %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Votre panier</h1>
        <table class="table table-striped table-hover mt-4 tableCartShopping">
            <thead>
                <tr>
                    <th>Titre du livre</th>
                    <th>Auteur</th>
                    <th>Quantité</th>
                    <th>Prix unitaire</th>
                    <th>Actions</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% if books|length == 0 %}
                <tr>
                    <td colspan="6">Votre panier ne contient pas de livres !</td>
                </tr>
                {% endif %}
                {% for book in books %}
                <tr>
                    <form action="{{ path('add', {'id': book.id}) }}" method="get">
                        <td>{{book.title}}</td>
                        <td>{{book.author.firstname}} {{book.author.name}}</td>
                        <td>
                            <select name="quantity" id="quantity" onchange="this.form.submit()">
                                {% for i in 1..10 %}
                                <option value="{{ i }}" {% if i == cartShopping[book.id] %} selected="selected"
                                    {% endif %}>
                                    {{ i }}</option>
                                {% endfor %}
                            </select>
                        </td>
                        <td>{{book.price}}</td>
                        <td>
                            {# <a href="#"><i class="fas fa-sync"></i></a> #}
                            <a href="{{ path('remove', {'id': book.id}) }}"><i class="fas fa-trash-alt"></i></a>
                        </td>
                        <td>{{book.price * cartShopping[book.id] }} €</td>
                    </form>
                </tr>
                {% set total = total + (book.price * cartShopping[book.id]) %}
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="row-flex mt-4">
        <div class="col-md-6 offset-md-10">
            {% if books|length != 0 %}
            <div class="ttcPrice"><b>Total :</b> {{ total }} €</div>
            {% endif %}
        </div>

        <div class="col-md-12 mt-4 btnValidationCart">
            <a href="{{ path('bookstore') }}" class="btn btn-primary">Continuer les achats</a>
            {% if books|length != 0 %}
            <a href="{{ path('delivery')}}" class="btn btn-success">Valider le panier</a>
            {% endif %}
        </div>

    </div>
    {% endblock %}

    {% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/cartshopping/cart_shopping.js')}}"></script>
    {% endblock %}