{% extends 'base.html.twig' %}

{% block title %}Tous les livres !{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset ('css/admin/header/header.css') }}">
<link rel="stylesheet" href="{{ asset ('css/admin/navigation/sidebar.css') }}">
<link rel="stylesheet" href="{{ asset ('css/admin/bookstore/books.css') }}">
{% endblock stylesheets %}

{% block header %}
{% include 'admin/partials/header.html.twig' %}
{% endblock header %}

{% block body %}
<div class="row all-book">
    <div class="row col-md-3">
        {% include 'admin/partials/sidebar.html.twig' %}
    </div>

    <div class="row col-md-8 mt-4">
        {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
        {% endfor %}
        <h2>Gérer la bibliothèque</h2>
        <div class="btn-plus">
            <a class="btn btn-warning" href="{{ path('admin_book_add')}}">+</a>
        </div>
        <table class="table table-striped mt-4 library">
            <thead>
                <tr>
                    <th>Titre du livre</th>
                    <th>Auteur</th>
                    <th>Catégorie</th>
                    <th>Prix €</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for book in books%}
                <tr>
                    <td>{{ book.title }}</td>
                    <td>{{ book.author.firstname }} {{book.author.name}}</td>
                    <td>{{ book.category.title }}</td>
                    <td>{{ book.price }}</td>
                    <td class="btn-action">
                        <a href="{{ path('admin_book_show', {id: book.id})}}" class="btn btn-outline-success"><i
                                class="far fa-eye"></i></a>
                        <a href="{{ path('admin_book_edit', {id: book.id})}}" class="btn btn-outline-primary"><i
                                class="fas fa-pencil-alt"></i></a>
                        <a href="{{ path('admin_book_delete', {id: book.id})}}" class="btn btn-outline-danger"><i
                                class="far fa-times-circle"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <!-- /.row col-md-8 -->
</div>
<!-- /.row all-book -->
{% endblock %}