{% extends 'base.html.twig' %}

{% block title %}Administration !{% endblock %}

{% block body %}
<h1>Bienvenue sur votre espace administration {{ app.user.username }} !</h1>
<div class="container mt-4">
    <h2>Gérer la bibliothèque</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titre du livre</th>
                <th>Auteur</th>
                <th>Catégorie</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books%}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.author.firstname }} {{book.author.name}}</td>
                <td>{{ book.category.title }}</td>
                <td>{{ book.price }} €</td>
                <td>
                    <a href="{{ path('admin_book_edit', {id: book.id})}}" class="btn btn-primary">Editer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}