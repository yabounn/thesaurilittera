{% extends 'base.html.twig' %}

{% block body %}
    <h2>Veuillez indiquer vos identifiants !</h2>

    <form action="{{ path('security_login') }}" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="form-label-group">
            <label for="email">Adresse email</label>
            <input type="text" id="email" class="form-control" name="_username" placeholder="Adresse email ..." required/>
        </div>
        <div class="form-label-group">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" class="form-control" name="_password" placeholder="Mot de passe" required/>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion !</button>
            <a href="{{ path('security_registration') }}">Je n'ai pas de compte</a>
        </div>
    </form>
{% endblock %}